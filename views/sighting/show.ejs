<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <title><%= sighting.species %></title>
</head>
<body>
    </html><%- include('../partials/nav.ejs') %>

    <!-- Successful creation flash message -->
    <% if (typeof message !== 'undefined') { %>
        <p style="background-color:rgb(71, 255, 129);"><%= message %></p>
        <% } %>

    <!-- Render sighting -->
    <img src="<%= sighting.image %>" alt="<%= sighting.species %>" width="400">
    <h1><%= sighting.species %></h1>
    <h2><%= sighting.location %>, <%= sighting.date %>, <%= sighting.time %></h2>

    <!-- Add to favourites -->
    <form action="/community/<%= user._id %>/<%= sighting._id %>/favourites" method="POST">
        <button class="btn" type="submit">Add to favourites</button>
    </form>

    <% if (currentUser === publisher) { %>
    <!-- Edit details / remove sighting -->
    <br><p>To be conditionally rendered if user is publisher:</p>
    <button class="btn"><a href="/community/<%= user._id %>/<%= sighting._id %>/edit">Edit details</a></button>

    <form action="/community/<%= user._id %>/<%= sighting._id %>?_method=DELETE" method="POST">
        <button class="btn" type="submit">Remove sighting</button>
    </form>
    <% } %>

    <!-- Comments section -->
    <h3>Join the conversation</h3>

    <!-- Add a comment -->
    <form action="/community/<%= user._id %>/<%= sighting._id %>" method="POST">
        <label for="text">Your comment:</label>
        <textarea type="text" name="text" id="text"></textarea>
        <button type="submit">Post</button>
        <br>
    </form>
    <!-- Display all comments -->
        <% if (comments) { %>
            <% comments.forEach((comment) => { %>
                <b><%= comment.commenter %></b><br>
                <%= comment.text %>
                <br>
           <% }) %>
           <% } %>
</body>
</html>